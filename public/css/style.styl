html,
body
    height: 100%
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
    overflow: hidden
a
    color: #00B7FF

#main
    height: 100%

#showdown
    float: left
    margin-left: 1%
    width: 48%
    height: 87%

    >div
        height: 100%

    textarea
        font-family: monospace
        width: 100%
        height: 100%

#preview
    float: right
    margin-right: 1%
    width: 48%
    height: 87%

    iframe
        border: solid 1px #ccc
        width: 100%
        height: 100%

#articles
    position: absolute
    top: 10px
    right: 10px
    list-style: none outside none
    margin: 0
    padding: 0
