border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

html,
body
    height: 100%
    overflow: hidden

body
    padding-top: 40px;

#container,
#main
    height: 100%

#main
    padding-top: 10px

#showdown
    float: left
    margin-left: 1%
    width: 48%
    height: 87%

    >div
        height: 100%

    textarea
        font-family: monospace
        width: 100%
        height: 100%

#preview
    border: solid 1px #ccc
    float: right
    margin-right: 1%
    padding: 4px
    width: 48%
    height: 87%
    border-radius(4px)

    iframe
        border: none
        width: 100%
        height: 100%

